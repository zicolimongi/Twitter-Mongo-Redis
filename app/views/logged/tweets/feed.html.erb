<h1>Tweets</h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Tweet</th>
          <th>From</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet["description"] %></td>
            <td><%= tweet["user_name"] %></td>
            <td><%= tweet["created_at"] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Tweet', new_logged_tweet_path, class: "btn btn-primary" %>
  </div>
</div>