<h1>My Tweets</h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Tweet</th>
          <th>Date</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.description %></td>
            <td><%= tweet.created_at %></td>
            <td><%= link_to 'Edit', edit_logged_tweet_path(tweet), class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', [:logged, tweet], method: :delete, data: { confirm: 'VocÃª tem ctz?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Tweet', new_logged_tweet_path, class: "btn btn-primary" %>
    <%= will_paginate @tweets, class: "pull-right" %>
  </div>
</div>