<h1>Following</h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @followings.each do |following| %>
          <tr>
            <td><%= following.name %></td>
            <td><%= following.email %></td>
            <td class="follow-action"><div class="btn btn-primary following" data-user-id=<%= following.id %>>Following</div></td>
            <td><%= link_to "Show", logged_user_path(following), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @followings %>
  </div>
</div>