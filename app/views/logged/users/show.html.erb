<div class="row">
  <div class="col-xs-12">
    <div class="well">
      <p><b>Name:</b> <%= @user.name %></p>
      <p><b>Email:</b> <%= @user.email %></p>
    </div>
    <table class="table table-hover table-striped">
      <thead>
        <th>Tweet</th>
      </thead>
      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td>
              <%= tweet.description %>
            </td>
          </tr>
        <% end -%>
      </tbody>
    </table>
    <%= will_paginate @tweets %>
    <%= link_to "Back", :back, class: "btn btn-default pull-right" %>
  </div>
</div>